{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PowerShell Launch Current File",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${file}"
    },
    {
      "name": "PHP Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000
    },
    {
      "name": "PHP Launch Current File",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
    },
    {
      "name": "Perl Launch Current File",
      "type": "perl",
      "request": "launch",
      "console": "integratedTerminal",
      "exec": "C:/Strawberry/perl/bin/perl.exe",
      "execArgs": [],
      "root": "${workspaceRoot}",
      "program": "${workspaceRoot}\\${relativeFile}",
      "inc": [],
      "args": [],
      "stopOnEntry": true
    }
  ]
}
